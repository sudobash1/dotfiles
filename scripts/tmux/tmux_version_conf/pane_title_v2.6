# To name a pane use: select-pane -T <name>

set-option -g pane-border-status off
set-option -g pane-border-format " { #P#{?#T,: ,}#T#{?pane_synchronized, [SYNC],}#{?pane_dead, [DEAD],} } "

# Auto hide pane-border-status line when only one pane is displayed (see tmux/tmux#566)
set-hook -g 'session-created'    "select-pane -T ''"
set-hook -g 'after-new-window'   "select-pane -T ''"
set-hook -g 'after-split-window' "select-pane -T '' ; run-shell -b "'"'"tmux set pane-border-status $( [ \#{window_panes} -gt 1 ] && [ \#{window_zoomed_flag} -eq 0 ] && echo bottom || echo off )"'"'
set-hook -g 'after-kill-pane'    "run-shell -b "'"'"tmux set pane-border-status $( [ \#{window_panes} -gt 1 ] && [ \#{window_zoomed_flag} -eq 0 ] && echo bottom || echo off )"'"' 
set-hook -g 'pane-exited'        "run-shell -b "'"'"tmux set pane-border-status $( [ \#{window_panes} -gt 1 ] && [ \#{window_zoomed_flag} -eq 0 ] && echo bottom || echo off )"'"'
set-hook -g 'after-resize-pane'  "run-shell -b "'"'"tmux set pane-border-status $( [ \#{window_panes} -gt 1 ] && [ \#{window_zoomed_flag} -eq 0 ] && echo bottom || echo off )"'"' # For Zoom

